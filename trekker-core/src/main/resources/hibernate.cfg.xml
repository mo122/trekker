<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost/trekker</property>
        <property name="hbm2ddl.auto">update</property>

        <mapping class="com.github.dirkraft.trekker.model.Trek"/>
        <mapping class="com.github.dirkraft.trekker.model.TrekStop"/>
        <mapping class="com.github.dirkraft.trekker.model.Flag"/>
        <mapping class="com.github.dirkraft.trekker.model.Priority"/>
        <mapping class="com.github.dirkraft.trekker.model.AuditLog"/>
        <mapping class="com.github.dirkraft.trekker.model.Human"/>
        <mapping class="com.github.dirkraft.trekker.model.Ghost"/>
        <mapping class="com.github.dirkraft.trekker.model.Task"/>

    </session-factory>
</hibernate-configuration>